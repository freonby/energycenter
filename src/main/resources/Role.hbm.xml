<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.qlab.energycenter.datamodel.Role" table="ROLE">
        <id name="id" type="long">
            <column name="ROLE_ID" />
            <generator class="increment" />
        </id>
        <property name="role" type="java.lang.String">
            <column name="ROLE" />
        </property>
        <many-to-one name="user" class="by.qlab.energycenter.datamodel.User" fetch="join">
            <column name="USER_ID" />
        </many-to-one>
    </class>
</hibernate-mapping>
