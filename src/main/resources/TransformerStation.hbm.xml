<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.qlab.energycenter.datamodel.TransformerStation" table="TRANSFORMERSTATION">
        <id name="transformerstation_id" type="long">
            <column name="TRANSFORMERSTATION_ID" />
            <generator class="increment" />
        </id>
        <property name="name" type="java.lang.String">
            <column name="NAME" />
        </property>
        <many-to-one name="customer" class="by.qlab.energycenter.datamodel.Customer" fetch="join">
            <column name="CUSTOMER_ID" />
        </many-to-one>
        <list name="listTypes" inverse="false" table="STATIONTYPE" lazy="true" cascade="all" fetch="select">
            <key>
                <column name="TRANSFORMERSTATION_ID" />
            </key>
            <list-index></list-index>
            <one-to-many class="by.qlab.energycenter.datamodel.StationType" />
        </list>
        <list name="listElectricalBusses" inverse="false" table="ELECTRICALBUS" lazy="true" cascade="all" fetch="select">
            <key>
                <column name="TRANSFORMERSTATION_ID" />
            </key>
            <list-index></list-index>
            <one-to-many class="by.qlab.energycenter.datamodel.ElectricalBus" />
        </list>
    </class>
</hibernate-mapping>
