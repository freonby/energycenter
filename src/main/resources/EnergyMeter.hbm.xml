<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.qlab.energycenter.datamodel.EnergyMeter" table="ENERGYMETER">
        <id name="energymeter_id" type="long">
            <column name="ENERGYMETER_ID" />
            <generator class="increment" />
        </id>
        <property name="number" type="java.lang.String">
            <column name="NUMBER" />
        </property>
        <many-to-one name="fider" class="by.qlab.energycenter.datamodel.Fider" fetch="join">
            <column name="FIDER_ID" />
        </many-to-one>
        <list name="listTypes" inverse="false" table="ENERGYMETERTYPE" lazy="true" cascade="all" fetch="select">
            <key>
                <column name="ENERGYMETER_ID" />
            </key>
            <list-index></list-index>
            <one-to-many class="by.qlab.energycenter.datamodel.EnergyMeterType" />
        </list>
    </class>
</hibernate-mapping>
