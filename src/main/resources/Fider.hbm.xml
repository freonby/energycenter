<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.qlab.energycenter.datamodel.Fider" table="FIDER">
        <id name="fider_id" type="long">
            <column name="FIDER_ID" />
            <generator class="increment" />
        </id>
        <property name="name" type="java.lang.String">
            <column name="NAME" />
        </property>
        <many-to-one name="sectionBus" class="by.qlab.energycenter.datamodel.SectionBus" fetch="join">
            <column name="SECTIONBUS_ID" />
        </many-to-one>
        <list name="listEnergyMeters" inverse="false" table="ENERGYMETER" lazy="true" cascade="all" fetch="select">
            <key>
                <column name="FIDER_ID" />
            </key>
            <list-index></list-index>
            <one-to-many class="by.qlab.energycenter.datamodel.EnergyMeter" />
        </list>
        <list name="listCurrentTransformers" inverse="false" table="CURRENTTRANSFORMER" lazy="true" cascade="all" fetch="select">
            <key>
                <column name="FIDER_ID" />
            </key>
            <list-index></list-index>
            <one-to-many class="by.qlab.energycenter.datamodel.CurrentTransformer" />
        </list>
        <list name="listVoltageTransformers" inverse="false" table="VOLTAGETRANSFORMER" lazy="true" cascade="all" fetch="select">
            <key>
                <column name="FIDER_ID" />
            </key>
            <list-index></list-index>
            <one-to-many class="by.qlab.energycenter.datamodel.VoltageTransformer" />
        </list>
    </class>
</hibernate-mapping>
