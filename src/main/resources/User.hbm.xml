<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="by.qlab.energycenter.datamodel.User" table="USER">
        <id name="id" type="long">
            <column name="USER_ID" />
            <generator class="increment" />
        </id>
        <property name="userLogin" type="java.lang.String">
            <column name="USERLOGIN" />
        </property>
        <set name="roles" table="ROLE" inverse="false" lazy="true" cascade="all" fetch="select">
            <key>
                <column name="USER_ID" />
            </key>
            <one-to-many class="by.qlab.energycenter.datamodel.Role" />
        </set>
    </class>
</hibernate-mapping>
